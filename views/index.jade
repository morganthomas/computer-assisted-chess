extends layout

block header
  link(rel="stylesheet" href="/stylesheets/index.css")

block content
  .container.page(ng-app="chessApp" ng-controller="indexController")  
    h1 Fairy Chess
  
    nav.navbar.navbar-default
      .container-fluid
        .collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-left
            li
              a(href="#/") <strong>Home</strong>
            li
              a(href="/rules") <strong>Rules</strong>
          ul.nav.navbar-nav.navbar-right.auth-controls
            li <a><strong>{{me.username}}</strong></a>
            li <a href="/auth/logout">Logout</a>

    div
      div.back-button(ng-show="notAtHome")
        a.h3(href="#/")
          i.fa.fa-arrow-left
          
    div(ng-view)

block scripts
  script(src="/scripts/lib/lodash.js")
  script(src="/scripts/lib/jquery.min.js")
  script(src="/scripts/lib/angular.min.js")
  script(src="/scripts/lib/angular-route.min.js")
  script(src="/scripts/lib/socket.io-1.3.5.js")
  script(src="/scripts/lib/socket.js")
  script(src="/scripts/chess/chess.js")
  script(src="/scripts/app.js")
  script(src="/scripts/services/socket.js")
  script(src="/scripts/services/me.js")
  script(src="/scripts/services/challengeList.js")
  script(src="/scripts/controllers/index.js")
  script(src="/scripts/controllers/viewChallenges.js")
  script(src="/scripts/controllers/play.js")
  script(src="/scripts/controllers/chessBoard.js")
